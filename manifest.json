{
  "manifest_version": 2,

  "name": "Converter",
  "description": "",
  "version": "1.0.0",
  "browser_action": {
   "default_icon": "sample.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["getHighlighted.js", "index.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
         "tabs",
         "<all_urls>"
       ]
}
